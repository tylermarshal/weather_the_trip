<section class="destination-show-hero">
  <h1>Destination: <%= @destination.city %></h1>
</section>

<div class="show-block-container">
  <div class="show-block">
    <h3><%= @destination.city %>, <%= @destination.state %></h3>
    <p>Latitude: <%= @destination.latitude %></p>
    <p>Logitude: <%= @destination.longitude %></p>
    <p>Population: <%= @destination.population %></p>
    <% if logged_in? && current_trip? %>
      <p><%= link_to "Add to Trip", destination_routes_path(@destination), method: :post %></p>
    <% end %>
    <% if current_admin? %>
      <p><%= link_to "Edit", edit_admin_destination_path(@destination) %></p>
      <p><%= link_to "Delete", destination_path(@destination), method: "delete", data: {confirm: "Really delete this destination?"} %></p>
    <% end %>
  </div>
  <iframe
    width="600"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=<%= ENV["gmaps_key"] %>&q=<%= @destination.city.gsub(" ", "+") %>,<%= @destination.state %>" allowfullscreen>
  </iframe>
</div>
